<div class="header-form">
    <div class="">
        <div class="row">
            <div class="col-2">
                <a href="/" class="logo">
                </a>
            </div>
            <div class="col-8 search">
                <div class="form-search">
                    <form id="search_form" action="http://localhost:3000/products" method="get">
                        <div class="search-wrap">
                            <div class="input">
                                <div class="flex">
                                    <input type="text" name="q" id="keySearch" autocomplete="off"
                                        placeholder="Tìm sản phẩm, danh mục hay thương hiệu mong muốn ...">
                                </div>
                            </div>
                            <button type="submit">
                                <i class="tikicon icon-search"></i>
                                <span>Tìm kiếm</span>
                            </button>
                        </div>
                    </form>
                    <div id="search-seller">
                        <div data-reactroot="" class="seller-search hidden"></div>
                    </div>
                    {{#if isAuth}}
                        <div class="col-md-1">
                            <div class="header-link">
                                <div class="user-profile item" id="header-user">
                                    <div data-reactroot="">
                                        <div>
                                        <a href="/auth/logout">
                                            <small style="color: aliceblue;">Xin chào</small></a>  
                                            <br>
                                            <b style="color: aliceblue;">{{authUser.username}}</b><br>
                                            <img class="icon-style-1 icon-user" src="/image/icon-header/dangNhapTaiKhoan-icon.png"
                                                alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{else}}
                        <div class="col-md-1">
                            <div class="header-link">
                                <div class="user-profile item" id="header-user">
                                    <div data-reactroot="">
                                        <div>
                                        <a href="/auth"><img class="icon-style-1 icon-user" src="/image/icon-header/dangNhapTaiKhoan-icon.png"
                                                alt="">
                                            <b style="color: aliceblue;">Đăng nhập</b><br>
                                            <small style="color: aliceblue;">Tài khoản</small></a>  
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="header-link">
                                <div class="user-profile item" id="header-user">
                                    <div data-reactroot="">
                                        <div>
                                        <a href="/auth"><img class="icon-style-1 icon-user" src="/image/icon-header/dangNhapTaiKhoan-icon.png"
                                                alt="">
                                            <b style="color: aliceblue;">Đăng kí</b><br>
                                            <small style="color: aliceblue;">Tài khoản</small></a>  
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>

        </div>

    </div>
</div>
<!-- end header-form -->